# =============================================================================
# Inclusive Urban Simulation - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your API keys
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# LLM API Keys
# -----------------------------------------------------------------------------

# Google Generative AI (Gemini)
# Get your key at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here
ENABLE_GOOGLE_API=True

# OpenAI
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
ENABLE_OPENAI_API=True

# Anthropic (Claude)
# Get your key at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ENABLE_ANTHROPIC_API=True

# Moonshot AI (Kimi)
# Get your key at: https://platform.moonshot.ai/console/api-keys
MOONSHOT_API_KEY=your_moonshot_api_key_here
ENABLE_MOONSHOT_API=False

# LG AI EXAONE via Friendli AI
# Get your token at: https://friendli.ai/
FRENDLI_TOKEN=your_friendli_token_here
EXAONE_BASE_URL=https://api.friendli.ai/serverless/v1
MODEL_NAME="LGAI-EXAONE/K-EXAONE-236B-A23B"
ENABLE_EXAONE_API=True

# -----------------------------------------------------------------------------
# Experiment Parameters
# -----------------------------------------------------------------------------

# Agent configuration
NUM_AGENTS=20
NUM_VULNERABLE=4
NUM_ROUNDS=3
NUM_SETS=20

# Default models
DEFAULT_MODEL=gemini-3-flash
MODERATOR_MODEL=gemini-3-flash

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

LOG_LEVEL=INFO
LOG_DIR=logs

# -----------------------------------------------------------------------------
# Runtime Configuration
# -----------------------------------------------------------------------------

# Random seed for reproducibility (change per experiment run)
RANDOM_SEED=42

# LLM Temperature (0.0-1.0, higher = more creative, lower = more deterministic)
# Recommended: 0.7 for balanced creativity and consistency
LLM_TEMPERATURE=0.7
